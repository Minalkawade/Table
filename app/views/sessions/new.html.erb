
<h1 align="center">login</h1>
<div class="row">
  <div class="col-sm-4">
    
  </div>
  <div class="col-sm-8">
      <%= form_for(:session,:html => {class: "form-horizontal", role: "form"}, url: login_path) do |form| %>
    <div class="form-group">
        <div class="control-lable col-sm-2">
        <%= form.label :email %>       
         </div>
        <div class="control-lable col-sm-4">
           <%= form.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
        </div>
      </div>

    <div class="form-group">
        <div class="control-lable col-sm-2">
       <%= form.label :password %>
        </div>
        <div class="control-lable col-sm-4">
          <%= form.password_field :password, class: "form-control", placeholder: "Enter password", autocomplete: "off" %>
        </div>
    </div>

 <!--  <div class="field" align="center">
    <%= form.label :password %>
    <%= form.password_field :password, id: :user_password, autocomplete: "off"%>
  </div> -->

    <div class="form-group"> 
      <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit "Log in" %>
      </div>
      </div>
    </div>
  </div>
</div>
<% end %>