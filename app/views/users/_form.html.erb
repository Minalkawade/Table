
 <%= render 'shared/errors', obj: user %>
  <div class="row">
      <div class="col-sm-4">
      </div>
    <div class="col-sm-8">
      <%= form_with(model: user,:html => {class: "form-horizontal", role: "form"}, local: true, multipart: true) do |form| %>
      <div class="form-group">
        <div class="control-lable col-sm-2">
        <label for="name"><%= form.label :username %></label>
        </div>
        <div class="control-lable col-sm-4">
           <%= form.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
        </div>
      </div>




      <div class="form-group">
        <div class="control-lable col-sm-2">
          <label for="email"><%= form.label :email %></label>
        </div>
        <div class="control-lable col-sm-4">
          <%= form.email_field :email, class: "form-control", placeholder: "Enter email" %>
        </div>
      </div>


      <div class="form-group">
        <div class="control-lable col-sm-2">
          <label for="pw"><%= form.label :password %></label>
        </div>
        <div class="control-lable col-sm-4">
          <%= form.password_field :password, class: "form-control", placeholder: "Enter password" %>
        </div>
      </div>


      <div class="form-group">
        <div class="control-lable col-sm-2">
          <label for="cpw"> <%= form.label :"Confirm Password " %></label>
        </div>
        <div class="control-lable col-sm-4">
          <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Enter password" %>
         
        </div>
      </div>

      <div class="fileinput fileinput-new" data-provides="fileinput">
        <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;"></div>
        <div>
          <span class="btn btn-default btn-file"><span class="fileinput-new">Select image</span><span class="fileinput-exists">Change</span><input type="file" name="user[image]"></span>
          <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
        </div>
      </div>

      <div class="fileinput fileinput-new input-group" data-provides="fileinput">
        <div class="form-control" data-trigger="fileinput"><i class="glyphicon glyphicon-file fileinput-exists"></i> <span class="fileinput-filename"></span></div>
        <span class="input-group-addon btn btn-default btn-file"><span class="fileinput-new">Select file</span><span class="fileinput-exists">Change</span><input type="file" name="user[document]" id="document"></span>
        <a href="#" class="input-group-addon btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
      </div>
      
     
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit  class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    
    </div>
</div>

<% end %>